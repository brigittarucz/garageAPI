<%- include('includes/head.ejs') %>

<title><%= pageTitle %></title>

<%- include('includes/nav.ejs') %>

</body>

<main>

    <section class="artists-container">
        <% for(var i = 0; i < artists.length; i++) { %>
        <article class="artist-article">
            <iframe width="270" height="185" src="<%= artists[i].url1 %>">
            </iframe>
            <div class="artist-article_content">
                <!-- <small>ARTIST NAME</small> -->
                <h4><%= artists[i].artistName %></h4>
                <p><span class="genre"><%= artists[i].subgenre %></span></p>
                <div class="artist-article_links"> 
                    <a href="<%= artists[i].url2 %>" target="_blank"> Listen to <%= artists[i].song2 %></a>
                    <a href="<%= artists[i].url3 %>" target="_blank"> Listen to <%= artists[i].song3 %></a>
                </div>
                <div class="artist-article_action">
                    <form action="/api/dashboard/edit-artist" method="POST">
                        <input type="hidden" value="<%= artists[i].id %>" name="artistId">
                        <button type="submit" class="btn">Edit</button>
                    </form>
                    <form action="/api/dashboard/delete-artist" method="POST">
                        <input type="hidden" value="<%= artists[i].id %>" name="artistId">
                        <button type="text" class="btn">Delete</button>
                    </form>
                </div>
            </div>
        </article>
        <% } %>
    </section>

</main>

</html>